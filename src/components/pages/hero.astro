---
const { img, title, subtitle, alt } = Astro.props;
---
<section class="lg:px-4 px-2.5">
    <div class="relative overflow-hidden">
        <img src={img} alt={alt} class="w-full lg:h-full h-[50dvh] prawns-animate-image object-cover">
        <div class="absolute lg:bottom-0 -bottom-[5px] left-0 prawns-sfumatura-bassa z-[1] w-full h-1/3"></div>
    </div>

    <div class="lg:prawns-container">
        <h2 class="lg:text-[32px] lg:ml-3 lg:mt-0 mt-4"><strong>{subtitle}</strong></h2>
        <h1 class="lg:text-[150px] text-[48px] lg:leading-[137px] uppercase text-c-orange -mt-4"><strong class="extra">{title}</strong></h1>
    </div>

</section>

