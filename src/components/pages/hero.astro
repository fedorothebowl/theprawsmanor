---
const { img, title, subtitle, alt } = Astro.props;
---
<section class="lg:px-4 px-2.5">
    <div class="relative">
        <img src={img} alt={alt} class="w-full">
        <div class="absolute bottom-0 left-0 prawns-sfumatura-bassa z-[1] w-full h-1/3"></div>
    </div>

    <div class="prawns-container">
        <h2 class="lg:text-[32px] lg:ml-3">{subtitle}</h2>
        <h1 class="lg:text-[150px] lg:leading-[137px] uppercase text-c-orange lg:-mt-4"><strong class="extra">{title}</strong></h1>
    </div>

</section>

